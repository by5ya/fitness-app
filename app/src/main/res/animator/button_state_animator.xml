<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:propertyName="scaleX" android:duration="100" android:valueTo="0.95"/>
            <objectAnimator android:propertyName="scaleY" android:duration="100" android:valueTo="0.95"/>
        </set>
    </item>
    <item android:state_pressed="false">
        <set>
            <objectAnimator android:propertyName="scaleX" android:duration="100" android:valueTo="1"/>
            <objectAnimator android:propertyName="scaleY" android:duration="100" android:valueTo="1"/>
        </set>
    </item>
</selector>